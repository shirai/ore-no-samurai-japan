  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  pod 'SwiftLint' # ソースコード静的チェック
  pod 'Kanna' # HTMLパーサ
  pod 'RealmSwift' # DB
  pod 'XLPagerTabStrip' # 上タブ
  pod 'SDWebImage' # Web画像DL
  pod 'NVActivityIndicatorView' # インジケータ

  # Pods for ore-no-samurai-japan

  target 'ore-no-samurai-japanTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'ore-no-samurai-japanUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
